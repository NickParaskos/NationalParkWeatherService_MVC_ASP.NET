@model Capstone.Web.Models.SettingsViewModel

@{
    ViewData["Title"] = "Settings";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Settings">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TemperatureSetting" class="control-label"></label>
                <select asp-for="TemperatureSetting" asp-items="Model.Choices" class="form-control"></select>
                <span asp-validation-for="TemperatureSetting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
